<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center"
    >

    <LinearLayout
        android:padding="38dp"
        android:id="@+id/mykonten"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgtoken"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="230dp"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/overbox"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#343434"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Congratulation!!!"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#343434"
            android:textStyle="bold"
            android:text="You have won the game"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            />

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/gradient"
            android:text="Close"
            android:textColor="#FFFF"
            android:textSize="22sp"

            />
    </LinearLayout>

        <LinearLayout
        android:id="@+id/overbox"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:background="@drawable/overbox"
            >
        </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dim"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>